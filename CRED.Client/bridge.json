{
    // The folder to output JavaScript (.js) files.
    //    "output": "$(OutDir)/bridge/",
    "output": "$(OutDir)/wwwroot/Bridge.NET/",

    //"module": "CREDClient",

    // Enable browser debugging of C# files.
    // Default is false.
    "sourceMap": {
        "enabled": true
    },

    // Set to true to disable Reflection metadata generation.
    // Default is false.
    "reflection": {
        "disabled": false,
        "target": "Inline"
    },

    "console": {
        "enabled": true
    },

    "loader": {
        "type": "ES6"
        //"manualLoading": false
    },
    //"outputBy": "Module",
    // Generate TypeScript Definition (.d.ts) files.
    // Default is false.
    "html": {
        //"disabled": true
    },
    "generateTypeScript": false,
    "outputFormatting": "Formatted",
    "combineScripts": false,

    // Delete everything from the output folder
    // Default is false
    //"cleanOutputFolderBeforeBuild": true

    // More config options available at
    // https://github.com/bridgedotnet/Bridge/wiki/global-configuration
    "resources": [
        {
            "inject": "false",
            "remark": "// source @{name}\n"
        } //,
        //{
        //    "name": "CRED.Client.test.js",
        //    "extract": "true",
        //    "outputFormatting": "Minified",
        //    "files": [
        //        "$(OutDir)/bridge/bridge.min.js",
        //        "$(OutDir)/bridge/*.min.js"
        //    ]
        //}
    ]
}